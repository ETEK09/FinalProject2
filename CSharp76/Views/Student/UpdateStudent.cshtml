@model Student

<h2>Update @Model.StudentID</h2>

@using (Html.BeginForm("UpdateStudentToDatabase", "Student", "Post"))
{
    <input asp-for="ID" type="hidden" value="@Model.ID" />

    <label asp-for="StudentID" class="control-label">StudentID</label>
    <input type="text" name="StudentID" class="form-control" value="@Model.StudentID" />

    <label asp-for="FirstName" class="control-label">Price</label>
    <input type="number" step="0.01" name="FirstName" class="form-control" value="@Model.FirstName" />

    <input type="submit" value="Update Student" class="btn btn-primary" />
}