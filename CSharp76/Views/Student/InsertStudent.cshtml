@model Student

<h2>Create a New Student</h2>

@using (Html.BeginForm("InsertStudentToDatabase", "Student", "Post"))
{
    <input asp-for="ID" type="hidden" value="" />

    <label asp-for="StudentID" class="control-label">Discord Name</label>
    <input type="text" name="StudentID" class="form-control" value="" />

    <label asp-for="FirstName" class="control-label">FirstName</label>
    <input type="text" step="0.01" name="FirstName" class="form-control" />

    <label asp-for="LastName" class="control-label">LastName</label>
    <input type="text" name="LastName" class="form-control" value="" />

    <label asp-for="GitHubID" class="control-label">GitHubID</label>
    <input type="text" step="0.01" name="GitHubID" class="form-control" />

    <label asp-for="Age" class="control-label">Age</label>
    <input type="number" step="0.01" name="Age" class="form-control" />

    <label asp-for="Grade" class="control-label">Grade</label>
    <input type="number" step="0.01" name="Grade" class="form-control" />

    <input type="submit" value="Create Student" class="btn btn-primary" />
}
